<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="UseCanvas.Window1"
	x:Name="Window"
	Title="UseCanvas"
	Width="260" Height="170">
	<Window.Background>
		<RadialGradientBrush>
			<RadialGradientBrush.RelativeTransform>
				<TransformGroup>
					<ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.307" ScaleY="1.563"/>
					<SkewTransform AngleX="0" AngleY="0" CenterX="0.5" CenterY="0.5"/>
					<RotateTransform Angle="0" CenterX="0.5" CenterY="0.5"/>
					<TranslateTransform X="0.036" Y="0.444"/>
				</TransformGroup>
			</RadialGradientBrush.RelativeTransform>
			<GradientStop Color="#FF008000" Offset="0"/>
			<GradientStop Color="#FF00FF00" Offset="1"/>
		</RadialGradientBrush>
	</Window.Background>
	<Canvas>
		<Button Content="TopLeft" Width="85" Height="30"
		 Canvas.Top="20" Canvas.Left="20"/>
		<Button Content="TopRight" Width="85" Height="30"
		 Canvas.Top="20" Canvas.Right="20"/>
		<Button Content="BottomLeft" Width="85" Height="30"
		 Canvas.Bottom="20" Canvas.Left="20"/>
		<Button Content="BottomRight" Width="85" Height="30"
		 Canvas.Bottom="20" Canvas.Right="20"/>
	</Canvas>
</Window>