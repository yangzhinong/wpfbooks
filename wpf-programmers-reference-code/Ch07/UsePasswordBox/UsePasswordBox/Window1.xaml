<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="UsePasswordBox.Window1"
	x:Name="Window"
	Title="UsePasswordBox"
	Width="336" Height="178"
	FontSize="16" FontWeight="Bold">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="#FF00FF00" Offset="0"/>
			<GradientStop Color="#FF002000" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
	<Canvas>
		<Label Content="User Name:" Canvas.Top="20" Canvas.Left="20"/>
		<TextBox Text="Cindy Coder" Width="150" Height="Auto" Canvas.Top="22" Canvas.Left="130" Name="txtUserName" />

		<Label Content="Password:" Canvas.Left="20" Canvas.Top="49.96"/>
		<PasswordBox Password="Secret" Width="150" Canvas.Top="56.12" Canvas.Left="130" Name="pwdPassword"/>

		<Button Content="OK" Width="75" IsDefault="True" Canvas.Bottom="10" Canvas.Right="100" Name="btnOk" Click="btnOk_Click" />
		<Button Content="Cancel" Width="75" IsCancel="True" Canvas.Bottom="10" Canvas.Right="10" Name="btnCancel" />		
	</Canvas>
</Window>