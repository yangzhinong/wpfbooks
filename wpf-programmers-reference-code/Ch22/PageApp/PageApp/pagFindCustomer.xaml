<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="PageApp.pagFindCustomer"
	x:Name="Page"
	WindowTitle="Find Customer"
	Title="Find Customer"
	FlowDirection="LeftToRight"
	Width="600" Height="400"
	WindowWidth="640" WindowHeight="480">
	<Border Style="{StaticResource styBorder}">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="100"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Image Source="Find.png"
			 HorizontalAlignment="Left" VerticalAlignment="Top"/>
			<Label Grid.Row="0" Grid.Column="0" FontSize="60" FontWeight="Bold"
			 HorizontalAlignment="Center" VerticalAlignment="Center"
			 Content="Find Customer" Foreground="Blue">
				<Label.BitmapEffect>
					<DropShadowBitmapEffect/>
				</Label.BitmapEffect>
			</Label>
			<Label Grid.Row="1" Grid.Column="0" FontSize="30" FontWeight="Bold"
			 Content="Build the Find Customer page here."
			 HorizontalAlignment="Center" VerticalAlignment="Center">
				<Label.BitmapEffect>
					<OuterGlowBitmapEffect GlowColor="LightBlue" GlowSize="10"/>
				</Label.BitmapEffect>
			</Label>
		</Grid>
	</Border>
</Page>