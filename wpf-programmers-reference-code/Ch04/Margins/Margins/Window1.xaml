<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Margins.Window1"
	x:Name="Window"
	Title="Margins"
	Width="380" Height="190"
	FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="#FFFFFFFF" Offset="0"/>
			<GradientStop Color="#FF0000FF" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
	<StackPanel Orientation="Horizontal">
		<StackPanel Margin="10">
			<Label Content="10" HorizontalAlignment="Center"/>
			<Grid Width="100" Height="100" Background="Green">
				<Button Margin="10"/>
			</Grid>
		</StackPanel>
		<StackPanel Margin="10">
			<Label Content="10,20" HorizontalAlignment="Center"/>
			<Grid Width="100" Height="100" Background="Green">
				<Button Margin="10,20"/>
			</Grid>
		</StackPanel>
		<StackPanel Margin="10">
			<Label Content="10,20,30,40" HorizontalAlignment="Center"/>
			<Grid Width="100" Height="100" Background="Green">
				<Button Margin="10,20,30,40"/>
			</Grid>
		</StackPanel>
	</StackPanel>
</Window>