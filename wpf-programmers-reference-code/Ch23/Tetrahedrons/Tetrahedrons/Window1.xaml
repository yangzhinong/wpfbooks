        </Grid.ColumnDefinitions>

        <Slider Name="sliX" Grid.Row="0" Grid.Column="1" Orientation="Vertical" 
		 Minimum="-90" Maximum="90" Value="-20"
		 TickFrequency="10" TickPlacement="None">
            <Slider.LayoutTransform>
