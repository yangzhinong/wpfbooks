<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="GradientBrushes.Window1"
	x:Name="Window"
	Title="GradientBrushes"
	Width="352" Height="156">

	<StackPanel Orientation="Horizontal">
		<Rectangle Stroke="#FF000000" HorizontalAlignment="Left" Margin="8" Width="150" >
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF40FF40" Offset="0"/>
					<GradientStop Color="#FF40FF40" Offset="1"/>
					<GradientStop Color="#FF008000" Offset="0.509"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<Rectangle Stroke="#FF000000" HorizontalAlignment="Left" Margin="8" Width="150" >
			<Rectangle.Fill>
				<RadialGradientBrush>
					<GradientStop Color="#FF40FF40" Offset="0"/>
					<GradientStop Color="#FF40FF40" Offset="1"/>
					<GradientStop Color="#FF008000" Offset="0.509"/>
				</RadialGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
	</StackPanel>
</Window>