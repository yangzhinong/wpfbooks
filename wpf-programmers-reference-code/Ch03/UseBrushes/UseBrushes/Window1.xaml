<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="UseBrushes.Window1"
	x:Name="Window"
	Title="UseBrushes"
	Width="300" Height="200">
	<Grid x:Name="LayoutRoot">
        <Rectangle Margin="20" StrokeThickness="20" Fill="#FFFFFF80">
			<Rectangle.Stroke>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FFFFFF00" Offset="0"/>
					<GradientStop Color="#FFFF8000" Offset="1"/>
				</LinearGradientBrush>
			</Rectangle.Stroke>
		</Rectangle>
        <Polygon StrokeThickness="10" Points="100,60 210,80 110,120 160,40 190,130" Fill="{x:Null}" >
        	<Polygon.Stroke>
        		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        			<GradientStop Color="#FF0000FF" Offset="0"/>
        			<GradientStop Color="#FFFFFFFF" Offset="1"/>
        		</LinearGradientBrush>
        	</Polygon.Stroke>
        </Polygon>
    </Grid>
</Window>