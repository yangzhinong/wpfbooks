<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="ModifiedGradientBrushes.Window1"
	x:Name="Window"
	Title="ModifiedGradientBrushes"
	Width="352" Height="156">

	<StackPanel Orientation="Horizontal">
		<Rectangle Stroke="#FF000000" HorizontalAlignment="Left" Margin="8" Width="150" >
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.727,0.721" StartPoint="0.287,0.212">
					<GradientStop Color="#FFFF4040" Offset="0"/>
					<GradientStop Color="#FFFF4040" Offset="1"/>
					<GradientStop Color="#FF800000" Offset="0.509"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<Rectangle Stroke="#FF000000" HorizontalAlignment="Left" Margin="8" Width="150" >
			<Rectangle.Fill>
				<RadialGradientBrush GradientOrigin="0.233,0.712">
					<RadialGradientBrush.RelativeTransform>
						<TransformGroup>
							<ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1" ScaleY="1"/>
							<SkewTransform AngleX="0" AngleY="-18.103" CenterX="0.5" CenterY="0.5"/>
							<RotateTransform Angle="0" CenterX="0.5" CenterY="0.5"/>
							<TranslateTransform X="-0.055" Y="-0.11"/>
						</TransformGroup>
					</RadialGradientBrush.RelativeTransform>
					<GradientStop Color="#FF4040FF" Offset="0"/>
					<GradientStop Color="#FF4040FF" Offset="1"/>
					<GradientStop Color="#FF000080" Offset="0.509"/>
				</RadialGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
	</StackPanel>
</Window>