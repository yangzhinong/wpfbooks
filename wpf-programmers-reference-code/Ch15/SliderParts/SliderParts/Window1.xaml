<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="SliderParts.Window1"
	x:Name="Window"
	Title="SliderParts"
	Width="400" Height="150">
	<Window.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
			<GradientStop Color="Lime" Offset="0"/>
			<GradientStop Color="Black" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>

	<Grid>
		<Slider Height="50" Margin="20" Foreground="Black"
		 TickFrequency="5" TickPlacement="BottomRight"
		 Minimum="0" Maximum="100" BorderThickness="5"
		 LargeChange="10" SmallChange="1" IsSelectionRangeEnabled="True"
		 IsSnapToTickEnabled="True" SelectionEnd="60" SelectionStart="25" Value="85">
		 	<Slider.Background>
				<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
					<GradientStop Color="LightYellow" Offset="0"/>
					<GradientStop Color="Orange" Offset="1"/>
				</LinearGradientBrush>
			</Slider.Background>
		 	<Slider.BorderBrush>
				<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
					<GradientStop Color="Orange" Offset="0"/>
					<GradientStop Color="LightYellow" Offset="1"/>
				</LinearGradientBrush>
			</Slider.BorderBrush>
		 </Slider>
	</Grid>
</Window>