<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="PensAndBrushes.Window1"
	x:Name="Window"
	Title="PensAndBrushes"
	Width="300" Height="200">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="#FFC0C0FF" Offset="0"/>
			<GradientStop Color="#FF0000FF" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
	<Grid x:Name="LayoutRoot">
		<Ellipse Fill="Red" Stroke="Purple"
		 Margin="20" StrokeThickness="10" StrokeDashArray="2,2"/>
	</Grid>
</Window>