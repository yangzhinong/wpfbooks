<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="GradientPens.Window1"
	x:Name="Window"
	Title="GradientPens"
	Width="300" Height="200" Background="Yellow">

	<Grid x:Name="LayoutRoot">
		<Ellipse Fill="#FFFFFFFF" StrokeThickness="10" Margin="64,22,81,56">
			<Ellipse.Stroke>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Red" Offset="0"/>
					<GradientStop Color="White" Offset="1"/>
				</LinearGradientBrush>
			</Ellipse.Stroke>
		</Ellipse>
		<Rectangle Fill="#FFFFFFFF" StrokeThickness="10" Margin="104,77,58,22">
			<Rectangle.Stroke>
				<LinearGradientBrush EndPoint="0,0" StartPoint="1,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="Blue" Offset="1"/>
				</LinearGradientBrush>
			</Rectangle.Stroke>
		</Rectangle>
		<Line X1="20" Y1="50" X2="260" Y2="130"
			StrokeThickness="10">
			<Line.Stroke>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="Lime" Offset="1"/>
				</LinearGradientBrush>
			</Line.Stroke>
		</Line>
	</Grid>
</Window>