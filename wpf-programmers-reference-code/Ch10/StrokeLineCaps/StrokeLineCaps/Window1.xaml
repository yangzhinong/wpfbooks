<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="StrokeLineCaps.Window1"
	x:Name="Window"
	Title="StrokeLineCaps"
	Width="400" Height="200" Background="#FFA0D6FF"
	FontSize="20" FontWeight="Bold">
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Width="120" Content="Flat"/>
		    <Line Margin="10" Height="20" X1="0" Y1="10" X2="235" Y2="10" Stroke="Green"
		     StrokeThickness="15" StrokeStartLineCap="Flat" StrokeEndLineCap="Flat"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Width="120" Content="Square"/>
		    <Line Margin="10" Height="20" X1="0" Y1="10" X2="235" Y2="10" Stroke="Green"
		     StrokeThickness="15" StrokeStartLineCap="Square" StrokeEndLineCap="Square"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Width="120" Content="Round"/>
		    <Line Margin="10" Height="20" X1="0" Y1="10" X2="235" Y2="10" Stroke="Green"
		     StrokeThickness="15" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Width="120" Content="Triangle"/>
		    <Line Margin="10" Height="20" X1="0" Y1="10" X2="235" Y2="10" Stroke="Green"
		     StrokeThickness="15" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle"/>
		</StackPanel>
	</StackPanel>
</Window>