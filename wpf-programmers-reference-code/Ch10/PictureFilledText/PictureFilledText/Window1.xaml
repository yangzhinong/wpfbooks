<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="PictureFilledText.Window1"
	x:Name="Window"
	Title="PictureFilledText"
	Width="550" Height="170" Background="LightBlue"
	FontFamily="Showcard Gothic" FontSize="100" FontWeight="Bold">
	<Grid>
		<Label Content="Flowers!" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Label.Foreground>
				<ImageBrush ImageSource="Flowers.jpg"/>
			</Label.Foreground>
		</Label>
	</Grid>
</Window>