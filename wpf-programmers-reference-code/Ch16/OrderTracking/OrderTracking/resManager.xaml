<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sys="clr-namespace:System;assembly=mscorlib">
	
	<!-- Main window -->
	<LinearGradientBrush x:Key="brWindow" StartPoint="0,0" EndPoint="0,1">
		<GradientStop Color="Red" Offset="0"/>
		<GradientStop Color="Black" Offset="1"/>		
	</LinearGradientBrush>
	<sys:String x:Key="txtTitle">OrderTracking - Manager</sys:String>

    <!-- Button visibilities -->
    <Visibility x:Key="visPendingOrders">Visible</Visibility>
    <Visibility x:Key="visCreateOrder">Visible</Visibility>
    <Visibility x:Key="visFindCustomer">Visible</Visibility>
    <Visibility x:Key="visTrackOrder">Visible</Visibility>
    <Visibility x:Key="visSystemMaintenance">Visible</Visibility>
</ResourceDictionary>