<UserControl x:Class="Chapters.Chapter14.WeakEventTester"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Chapter14="clr-namespace:Chapters.Chapter14">
	<DockPanel>
		<TextBlock x:Name="_message"
				   DockPanel.Dock="Top" />
		<Chapter14:DataSource x:Name="_eventSource" Height="100">
			<Button Content="Click to raise WeakEvent" Click="RaiseWeakEvent" />
		</Chapter14:DataSource>
	</DockPanel>
</UserControl>
