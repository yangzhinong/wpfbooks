					<Button Content="3" />
					<Button Content="4" />
					<Button Content="5" />
					<Button Content="6" />
					<Button Content="7" />
					<Button Content="8" />
					<Button Content="9" />
					<Button Content="10" />
					<Button Content="11" />
					<Button Content="12" />
					<Button Content="13" />
					<Button Content="14" />
					<Button Content="15" />
					<Button Content="16" />
					<Button x:Name="_lastBtn"
							Content="17" />
				</Chapter07:RowsPanel>
			</ScrollViewer>
		</Border>
	</DockPanel>
</UserControl>
