<UserControl x:Class="Chapters.Chapter07.RowsPanelTester"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Chapter07="clr-namespace:Chapters.Chapter07">
	<UserControl.Resources>
	</UserControl.Resources>
	<DockPanel>
		<CheckBox Click="OnAnimateScroll">Animate Scrolling</CheckBox>
		<Border BorderBrush="Black"
				BorderThickness="1">

			<ScrollViewer x:Name="_sv"
						  CanContentScroll="True">
				<Chapter07:RowsPanel x:Name="_panel"
