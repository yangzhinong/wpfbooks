						<RadialGradientBrush>
							<GradientStop Color="#3FFFFFFF"
										  Offset="1" />
							<GradientStop Color="#26FFFFFF"
										  Offset="0" />
						</RadialGradientBrush>
					</Ellipse.Fill>
				</Ellipse>
			</Grid>
		</ControlTemplate>

	</UserControl.Resources>
	<DockPanel>
		<Image x:Name="Container"
			   Source="/Resources;component/Shared/toucan.jpg"
			   Stretch="Fill" />

	</DockPanel>
</UserControl>
