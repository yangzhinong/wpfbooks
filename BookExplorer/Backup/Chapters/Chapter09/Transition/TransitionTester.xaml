<UserControl x:Class="Chapters.Chapter09.TransitionTester"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Chapter09="clr-namespace:Chapters.Chapter09">
	<DockPanel>
		<GroupBox Header="Transitions">
			<StackPanel>
				<Button x:Name="Fade"
						Click="PlayTransition">Fade</Button>
				<Button x:Name="Slide"
						Click="PlayTransition">Slide</Button>
			</StackPanel>
		</GroupBox>
		<Chapter09:TransitionContainer x:Name="_trans">
			<Image x:Name="_view2"
				   Source="/Resources;component/Chapter09/bike_blue.jpg"
				   Stretch="Fill" />
			<Image x:Name="_view1"
				   Source="/Resources;component/Chapter09/bike_red.jpg"
				   Stretch="Fill" />
		</Chapter09:TransitionContainer>
	</DockPanel>
</UserControl>
